<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationSequence">
    <success>Always</success>
    <operations>
      <li Class="PatchOperationRemove">
        <xpath>/Defs/ThingDef[defName="LTS_Growingpit"]/costList/WoodLog</xpath>
      </li>
      <li Class="PatchOperationConditional">
        <xpath>/Defs/ThingDef[defName="LTS_Growingpit" and (stuffCategories)]</xpath>
        <match Class="PatchOperationAdd">
          <xpath>/Defs/ThingDef[defName="LTS_Growingpit"]/stuffCategories</xpath>
          <value>
            <li>Woody</li>
          </value>
        </match>
        <nomatch Class="PatchOperationAdd">
          <xpath>/Defs/ThingDef[defName="LTS_Growingpit"]</xpath>
          <value>
            <stuffCategories>
              <li>Woody</li>
            </stuffCategories>
          </value>
        </nomatch>
      </li>
      <li Class="PatchOperationConditional">
        <success>Always</success>
        <xpath>/Defs/ThingDef[defName="LTS_Growingpit" and not(costStuffCount)]</xpath>
        <match Class="PatchOperationAdd">
          <xpath>/Defs/ThingDef[defName="LTS_Growingpit" and not(costStuffCount)]</xpath>
          <value>
            <costStuffCount>50</costStuffCount>
          </value>
        </match>
      </li>
      <li Class="PatchOperationConditional">
        <success>Always</success>
        <xpath>/Defs/ThingDef[defName="LTS_Growingpit"]/constructEffect</xpath>
        <match Class="PatchOperationRemove">
          <xpath>/Defs/ThingDef[defName="LTS_Growingpit"]/constructEffect</xpath>
        </match>
      </li>
      <li Class="PatchOperationRemove">
        <xpath>/Defs/ThingDef[defName="LTS_GrowingpitRound"]/costList/WoodLog</xpath>
      </li>
      <li Class="PatchOperationConditional">
        <xpath>/Defs/ThingDef[defName="LTS_GrowingpitRound" and (stuffCategories)]</xpath>
        <match Class="PatchOperationAdd">
          <xpath>/Defs/ThingDef[defName="LTS_GrowingpitRound"]/stuffCategories</xpath>
          <value>
            <li>Woody</li>
          </value>
        </match>
        <nomatch Class="PatchOperationAdd">
          <xpath>/Defs/ThingDef[defName="LTS_GrowingpitRound"]</xpath>
          <value>
            <stuffCategories>
              <li>Woody</li>
            </stuffCategories>
          </value>
        </nomatch>
      </li>
      <li Class="PatchOperationConditional">
        <success>Always</success>
        <xpath>/Defs/ThingDef[defName="LTS_GrowingpitRound" and not(costStuffCount)]</xpath>
        <match Class="PatchOperationAdd">
          <xpath>/Defs/ThingDef[defName="LTS_GrowingpitRound" and not(costStuffCount)]</xpath>
          <value>
            <costStuffCount>25</costStuffCount>
          </value>
        </match>
      </li>
      <li Class="PatchOperationConditional">
        <success>Always</success>
        <xpath>/Defs/ThingDef[defName="LTS_GrowingpitRound"]/constructEffect</xpath>
        <match Class="PatchOperationRemove">
          <xpath>/Defs/ThingDef[defName="LTS_GrowingpitRound"]/constructEffect</xpath>
        </match>
      </li>
      <li Class="PatchOperationRemove">
        <xpath>/Defs/ThingDef[defName="LTS_GrowingPlot"]/costList/WoodLog</xpath>
      </li>
      <li Class="PatchOperationConditional">
        <xpath>/Defs/ThingDef[defName="LTS_GrowingPlot" and (stuffCategories)]</xpath>
        <match Class="PatchOperationAdd">
          <xpath>/Defs/ThingDef[defName="LTS_GrowingPlot"]/stuffCategories</xpath>
          <value>
            <li>Woody</li>
          </value>
        </match>
        <nomatch Class="PatchOperationAdd">
          <xpath>/Defs/ThingDef[defName="LTS_GrowingPlot"]</xpath>
          <value>
            <stuffCategories>
              <li>Woody</li>
            </stuffCategories>
          </value>
        </nomatch>
      </li>
      <li Class="PatchOperationConditional">
        <success>Always</success>
        <xpath>/Defs/ThingDef[defName="LTS_GrowingPlot" and not(costStuffCount)]</xpath>
        <match Class="PatchOperationAdd">
          <xpath>/Defs/ThingDef[defName="LTS_GrowingPlot" and not(costStuffCount)]</xpath>
          <value>
            <costStuffCount>20</costStuffCount>
          </value>
        </match>
      </li>
      <li Class="PatchOperationConditional">
        <success>Always</success>
        <xpath>/Defs/ThingDef[defName="LTS_GrowingPlot"]/constructEffect</xpath>
        <match Class="PatchOperationRemove">
          <xpath>/Defs/ThingDef[defName="LTS_GrowingPlot"]/constructEffect</xpath>
        </match>
      </li>
    </operations>
  </Operation>
</Patch>