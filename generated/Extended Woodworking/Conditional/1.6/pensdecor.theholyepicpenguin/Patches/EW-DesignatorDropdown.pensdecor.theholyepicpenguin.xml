<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationConditional">
    <xpath>Defs/TerrainDef[defName="PenWoodFloor"]/designatorDropdown</xpath>
    <match Class="PatchOperationReplace">
      <xpath>Defs/TerrainDef[defName="PenWoodFloor"]/designatorDropdown</xpath>
      <value>
        <designatorDropdown>EW_Designator_PenWoodFloor</designatorDropdown>
      </value>
    </match>
    <nomatch Class="PatchOperationAdd">
      <xpath>Defs/TerrainDef[defName="PenWoodFloor"]</xpath>
      <value>
        <designatorDropdown>EW_Designator_PenWoodFloor</designatorDropdown>
      </value>
    </nomatch>
  </Operation>
</Patch>