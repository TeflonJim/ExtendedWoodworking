<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationFindMod">
    <success>Always</success>
    <mods>
      <li>Core</li>
    </mods>
    <match Class="PatchOperationSequence">
      <success>Always</success>
      <operations>
        <li Class="PatchOperationTest">
          <xpath>Defs/ThingDef[defName="WatermillGenerator"]/costList/WoodLog</xpath>
        </li>
        <li Class="PatchOperationRemove">
          <xpath>Defs/ThingDef[defName="WatermillGenerator"]/costList/WoodLog</xpath>
        </li>
        <li Class="PatchOperationConditional">
          <xpath>Defs/ThingDef[defName="WatermillGenerator" and (stuffCategories)]</xpath>
          <match Class="PatchOperationAdd">
            <xpath>Defs/ThingDef[defName="WatermillGenerator"]/stuffCategories</xpath>
            <value>
              <li>Woody</li>
            </value>
          </match>
          <nomatch Class="PatchOperationAdd">
            <xpath>Defs/ThingDef[defName="WatermillGenerator"]</xpath>
            <value>
              <stuffCategories>
                <li>Woody</li>
              </stuffCategories>
            </value>
          </nomatch>
        </li>
        <li Class="PatchOperationConditional">
          <success>Always</success>
          <xpath>Defs/ThingDef[defName="WatermillGenerator" and not(costStuffCount)]</xpath>
          <match Class="PatchOperationAdd">
            <xpath>Defs/ThingDef[defName="WatermillGenerator"]</xpath>
            <value>
              <costStuffCount>340</costStuffCount>
            </value>
          </match>
        </li>
        <li Class="PatchOperationConditional">
          <success>Always</success>
          <xpath>Defs/ThingDef[defName="WatermillGenerator"]/constructEffect</xpath>
          <match Class="PatchOperationRemove">
            <xpath>Defs/ThingDef[defName="WatermillGenerator"]/constructEffect</xpath>
          </match>
        </li>
      </operations>
    </match>
  </Operation>
</Patch>