<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationFindMod">
    <success>Always</success>
    <mods>
      <li>RimWriter - Books, Scrolls, Tablets, and Libraries</li>
    </mods>
    <match Class="PatchOperationSequence">
      <operations>
        <li Class="PatchOperationRemove">
          <xpath>/Defs/RecipeDef[defName="RimWriter_MakePage"]/ingredients/li[filter/thingDefs/li="WoodLog"]</xpath>
        </li>
        <li Class="PatchOperationAdd">
          <xpath>/Defs/RecipeDef[defName="RimWriter_MakePage"]/ingredients</xpath>
          <value>
            <li>
              <filter>
                <categories>
                  <li>WoodTypes</li>
                </categories>
              </filter>
              <count>15</count>
            </li>
          </value>
        </li>
        <li Class="PatchOperationRemove">
          <xpath>/Defs/RecipeDef[defName="RimWriter_MakePage"]/fixedIngredientFilter/thingDefs/li[.="WoodLog"]</xpath>
        </li>
        <li Class="PatchOperationConditional">
          <xpath>/Defs/RecipeDef[defName="RimWriter_MakePage"]/fixedIngredientFilter/thingDefs/li/*</xpath>
          <nomatch Class="PatchOperationRemove">
            <xpath>/Defs/RecipeDef[defName="RimWriter_MakePage"]/fixedIngredientFilter/thingDefs</xpath>
          </nomatch>
        </li>
        <li Class="PatchOperationConditional">
          <xpath>/Defs/RecipeDef[defName="RimWriter_MakePage"]/fixedIngredientFilter/categories</xpath>
          <match Class="PatchOperationAdd">
            <xpath>/Defs/RecipeDef[defName="RimWriter_MakePage"]/fixedIngredientFilter/categories</xpath>
            <value>
              <li>WoodTypes</li>
            </value>
          </match>
          <nomatch Class="PatchOperationAdd">
            <xpath>/Defs/RecipeDef[defName="RimWriter_MakePage"]/fixedIngredientFilter</xpath>
            <value>
              <categories>
                <li>WoodTypes</li>
              </categories>
            </value>
          </nomatch>
        </li>
      </operations>
    </match>
  </Operation>
</Patch>